@model Term_Project.Models.mobile

@{Layout="/Views/Shared/_layout.cshtml";}

<body>
    @using(Html.BeginForm("saveMobile","Admin",FormMethod.Post,new {enctype = "multipart/form-data" , 
    style="border: double;text-align:center" })){
    
    <br/><br/><br/>
        @Html.LabelFor(m=>m.name)
        @Html.TextBoxFor(m=>m.name)<br /><br />
        @Html.LabelFor(m=>m.brand)
        @Html.TextBoxFor(m=>m.brand)<br /><br />
        @Html.LabelFor(m=>m.price)
        @Html.TextBoxFor(m=>m.price)<br /><br />
        @Html.LabelFor(m=>m.processor)
        @Html.TextBoxFor(m=>m.processor)<br /><br />
        @Html.LabelFor(m=>m.os)
        @Html.TextBoxFor(m=>m.os)<br /><br />
        @Html.LabelFor(m=>m.display)
        @Html.TextBoxFor(m=>m.display)<br /><br />
        @Html.LabelFor(m=>m.camera)
        @Html.TextBoxFor(m=>m.camera)<br /><br />
        @Html.LabelFor(m=>m.battery)
        @Html.TextBoxFor(m=>m.battery)<br /><br />
        @Html.LabelFor(m=>m.other)
        @Html.TextBoxFor(m=>m.other)<br /><br />
        @Html.LabelFor(m=>m.image)
        @Html.TextBoxFor(m => m.image, new {type="file" })
    <input type="submit" id="btn" value="Add Mobile">}
    <br/><br/><br/>

</body>

